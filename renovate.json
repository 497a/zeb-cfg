{

    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [ "config:base" ],
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [ "schedule:daily" ]
    },
    "nix": {
        "enabled": true
    },
    "packageRules": [
        {
            "automerge": true,

            "matchManagers": [ "nix" ],
            "packagePatterns": [ "*" ],
            "excludePackagePatterns": [ "helix" ],
            "enabled": true
        }

    ]
}